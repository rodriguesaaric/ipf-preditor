{
  "version": 2,
  "functions": {
    "api/**/*.py": {
      "runtime": "python3.11",
      "maxDuration": 30,
      "memory": 1536
    }
  },
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "index.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
